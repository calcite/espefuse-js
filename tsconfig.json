{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "dist",
    "strictPropertyInitialization": false,
    "noImplicitAny": false
  },
  "include": ["src/**/*"]
}

